#include<iostream>
using namespace std;

main()
{
        char str[50];
         cout<<"Enter a string in upper case:\n";
         fgets(str,50,stdin);

         for(int i=0;str[i]!='\0';i++)
         {
                 if(str[i]>=65 && str[i]<=90)

                 str[i]=str[i]+32;
                 else
                         continue;
         }

         for(int i=0;str[i]!='\0';i++)
         {
                 cout<<str[i];
         }
         cout<<"\n";
}
